<h2>Todos nuestros productos :D</h2>
<div class="productFromServer" id="realTimeProducts">
    {{#each products}}
        <div class="productContainer" id="productsFromServer"></div>
    {{/each}}
</div>
<div class="formAgregarContainer">
    <h2>Agregá un producto</h1>
    <form class="formAgregar" id="addProductForm">
        <div>
            <label for="title">Titulo/nombre del producto:</label>
            <input type="text" id="title" />
        </div>
        <div>
            <label for="description">Descripción:</label>
            <input type="text" id="description" />
        </div>
        <div>
            <label for="price">Precio:</label>
            <input type="number" id="price" />
        </div>
        <div>
            <label for="code">Código de producto:</label>
            <input type="text" id="code" />
        </div>
        <div>
            <label for="stock">Stock:</label>
            <input type="number" id="stock" />
        </div>
        <div>
            <label for="category">Categoría:</label>
            <input type="text" id="category" />
        </div>
        <div>
            <label for="thumbnails">Thumbnails:</label>
            <input type="file" id="thumbnails" />
        </div>
        <div>
            <button type="submit" id="addProduct">Agregar</button>
        </div>
    </form>
</div>
<div>
    <form class="deleteForm" id="deleteProductForm">
    <h4>Producto a eliminar</h4>
    <div>
        <label for="prodId">ID del producto:</label>
        <input type="number" id="prodId" />
    </div>
    <button type="submit" id="deleteProduct">Eliminar</button>
</form>
</div>
